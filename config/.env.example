# Application Configuration
APP_NAME=crypto-trading-bot
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=30
API_RETRIES=3
API_RATE_LIMIT_PER_MINUTE=100

# Connection Pooling and Performance (Production Optimized)
API_CONNECTION_POOL_LIMIT=100
API_CONNECTION_POOL_LIMIT_PER_HOST=10
API_KEEPALIVE_TIMEOUT=30
API_DNS_CACHE_TTL=300
API_COMPRESSION=true
API_KEEP_ALIVE=true

# Exchange API Credentials (Get these from your exchange)
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET_KEY=your_secret_key_here
EXCHANGE_SANDBOX=false

# Robinhood Crypto API Configuration
ROBINHOOD_API_TOKEN=your_robinhood_api_token_here
ROBINHOOD_API_KEY=your_robinhood_api_key_here
ROBINHOOD_PRIVATE_KEY=your_base64_encoded_private_key_here
ROBINHOOD_SANDBOX=false
ROBINHOOD_BASE_URL=https://trading.robinhood.com

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Trading Configuration
TRADING_ENABLED=true
MAX_POSITIONS=10
DEFAULT_RISK_PER_TRADE=0.02
MIN_ORDER_SIZE=10.0

# Risk Management
MAX_PORTFOLIO_RISK=0.1
MAX_CORRELATION=0.7
STOP_LOSS_DEFAULT=0.05
TAKE_PROFIT_DEFAULT=0.15
MAX_DRAWDOWN=0.2

# Strategy Configuration
MARKET_MAKING_ENABLED=true
SPREAD_PERCENTAGE=0.001
ORDER_REFRESH_TIME=30
INVENTORY_RANGE=0.1

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_TIMEOUT=10
WEBSOCKET_MAX_RECONNECTS=5

# Logging
LOG_TO_FILE=false
LOG_FILE_PATH=logs/crypto_trading_bot.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Notification Settings (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_RECIPIENTS=

# Development Settings
HOT_RELOAD=false
TESTNET=true
